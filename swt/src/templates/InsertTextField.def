[Begin_Command]
	Name						Insert TextField
	Type						1
	Token						com.photica.photopulse.commands.InsertTextFieldCommand
	Resource					Generator.Rsrc
	ResID						304


	[Value]
		Name				Width
		Type				String
		Token				width
		DValue				0
		HelpString			Width of TextField in pixels, 0 uses encoded size

	[Value]
		Name				Height
		Type				String
		Token				height
		DValue				0
		HelpString			Width of TextField in pixels, 0 uses encoded size

	[Value]
		Name				Variable
		Type				String
		Token				variable
		HelpString			ActionScript variable name for TextField

	[Value]
		Name				Font Name
		Type				String
		Token				fontName
		DValue				_sans
		HelpString			Name of font. Specified font definition must be available externally

	[Value]
		Name				Font Height
		Type				String
		Token				fontHeight
		DValue				16
		HelpString			Font height of TextField in points

	[Value]
		Name				Color
		Type				ColorList
		Token				fontColor
		DValue				Black
		HelpString			Specifies the color of the inserted text. 

	[Value]
		Name				Word Wrap
		Type				List
		Token				wordWrap
		DValue				true
		ValueList			false
		ValueList			true
		HelpString			Word wrap text

	[Value]
		Name				Alignment
		Type				List
		Token				alignment
		ValueList			left
		ValueList			right
		ValueList			center
		ValueList			justify
		HelpString			Specifies the text alignment. 

[End_Command]
